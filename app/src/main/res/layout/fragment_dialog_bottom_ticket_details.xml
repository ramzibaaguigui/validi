<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/fragment_head_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bottom_fragment_header"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view_draggable"
            android:layout_width="100dp"
            android:layout_height="7dp"
            android:layout_margin="5dp"
            android:background="@drawable/background_draggable_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_ticket_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="ticket number for "
            android:textColor="@color/white"
            android:textSize="25sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/text_view_passenger_name"
        style="@style/TicketFragmentPropertyNameTextViewStyle"
        android:text="@string/passenger_name_string"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_head_container" />

    <TextView
        android:id="@+id/text_view_passenger_name_value"
        style="@style/TicketFragmentPropertyValueTextViewStyle"
        android:text="Ilyas Benhammadi"
        app:layout_constraintBottom_toBottomOf="@id/text_view_passenger_name"
        app:layout_constraintStart_toEndOf="@id/text_view_passenger_name"
        app:layout_constraintTop_toTopOf="@id/text_view_passenger_name" />

    <TextView
        android:id="@+id/text_view_travel_item_arrival_station"
        style="@style/TicketFragmentPropertyNameTextViewStyle"
        android:text="@string/boarding_station_string"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_passenger_name" />

    <TextView
        android:id="@+id/text_view_boarding_station_value"
        style="@style/TicketFragmentPropertyValueTextViewStyle"
        android:text="SOGRAL"
        app:layout_constraintBottom_toBottomOf="@id/text_view_travel_item_arrival_station"
        app:layout_constraintStart_toEndOf="@id/text_view_travel_item_arrival_station"
        app:layout_constraintTop_toTopOf="@id/text_view_travel_item_arrival_station" />

    <TextView
        android:id="@+id/text_view_ticket_boarding_station_name"
        style="@style/TicketFragmentPropertyNameTextViewStyle"
        android:text="@string/landing_station_string"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_travel_item_arrival_station" />

    <TextView
        android:id="@+id/text_view_landing_station_value"
        style="@style/TicketFragmentPropertyValueTextViewStyle"
        android:text="Paris"
        app:layout_constraintBottom_toBottomOf="@id/text_view_ticket_boarding_station_name"
        app:layout_constraintStart_toEndOf="@id/text_view_ticket_boarding_station_name"
        app:layout_constraintTop_toTopOf="@id/text_view_ticket_boarding_station_name" />

    <TextView
        android:id="@+id/text_view_travel_class"
        style="@style/TicketFragmentPropertyNameTextViewStyle"
        android:text="@string/travel_class_string"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_ticket_boarding_station_name" />

    <TextView
        android:id="@+id/text_view_travel_class_value"
        style="@style/TicketFragmentPropertyValueTextViewStyle"
        android:text="Paris"
        app:layout_constraintBottom_toBottomOf="@id/text_view_travel_class"
        app:layout_constraintStart_toEndOf="@id/text_view_travel_class"
        app:layout_constraintTop_toTopOf="@id/text_view_travel_class" />

    <TextView
        android:id="@+id/text_view_ticket_is_validated"
        style="@style/TicketFragmentPropertyNameTextViewStyle"
        android:text="@string/Validated_string"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_travel_class" />

    <TextView
        android:id="@+id/text_view_ticket_is_validated_value"
        style="@style/TicketFragmentPropertyValueTextViewStyle"
        android:text="Paris"
        app:layout_constraintBottom_toBottomOf="@id/text_view_ticket_is_validated"
        app:layout_constraintStart_toEndOf="@id/text_view_ticket_is_validated"
        app:layout_constraintTop_toTopOf="@id/text_view_ticket_is_validated" />


    <TextView
        android:id="@+id/text_view_payment_method"
        style="@style/TicketFragmentPropertyNameTextViewStyle"
        android:text="@string/payment_method_string"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_ticket_is_validated" />

    <TextView
        android:id="@+id/text_view_payment_method_value"
        style="@style/TicketFragmentPropertyValueTextViewStyle"
        android:text="Paris"
        app:layout_constraintBottom_toBottomOf="@id/text_view_payment_method"
        app:layout_constraintStart_toEndOf="@id/text_view_payment_method"
        app:layout_constraintTop_toTopOf="@id/text_view_payment_method" />


    <TextView
        android:id="@+id/text_view_ticket_price"
        style="@style/TicketFragmentPropertyNameTextViewStyle"
        android:text="@string/price_string"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_payment_method" />

    <TextView
        android:id="@+id/text_view_ticket_price_value"
        style="@style/TicketFragmentPropertyValueTextViewStyle"
        android:text="Paris"
        app:layout_constraintBottom_toBottomOf="@id/text_view_ticket_price"
        app:layout_constraintStart_toEndOf="@id/text_view_ticket_price"
        app:layout_constraintTop_toTopOf="@id/text_view_ticket_price" />

    <Button
        android:id="@+id/button_validate_ticket"
        style="@style/ProfileActionButtonStyle"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/validate_string"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_ticket_price" />

</androidx.constraintlayout.widget.ConstraintLayout>