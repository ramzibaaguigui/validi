<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iamge_filter_view_app_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:background="@color/black_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:roundPercent="1" />

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:text="@string/tadhkirati_string"
        android:textColor="@color/black_text"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/iamge_filter_view_app_icon"
        app:layout_constraintStart_toEndOf="@id/iamge_filter_view_app_icon"
        app:layout_constraintTop_toTopOf="@id/iamge_filter_view_app_icon" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginEnd="15dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@id/iamge_filter_view_app_icon"
        app:layout_constraintBottom_toBottomOf="@id/iamge_filter_view_app_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_close" />

</androidx.constraintlayout.widget.ConstraintLayout>