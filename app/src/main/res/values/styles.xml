<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ProfilePropertyNameTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ProfilePropertyValueTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/background_text_view_profile_property_value</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ProfileDetailsImageFilterViewStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/blue_action</item>
    </style>

    <style name="ProfileSectionHeaderImageViewStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="layout_goneMarginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ProfileSectionTitleTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/nunito_sans_black</item>
        <item name="android:textColor">@color/blue_action</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="ProfileVerticalDividerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@color/grey_border</item>
    </style>

    <style name="ProfilePropertyValueEditTextStyle" parent="ProfilePropertyValueTextViewStyle">
        <item name="android:background">@drawable/background_edit_text_profile_property_value</item>
    </style>

    <style name="ProfilePropertyRequiredTextViewStyle" parent="ProfilePropertyNameTextViewStyle">
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
    </style>

    <style name="ProfileActionButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/background_button_profile_upload_image</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="ProfileCardViewComponentStyle">
        <item name="background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:shadowColor">@color/grey_border</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">20</item>
    </style>

    <style name="ProfileComponentRootViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="TicketFragmentPropertyNameTextViewStyle">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="TicketFragmentPropertyValueTextViewStyle">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textColor">@color/purple</item>
    </style>


</resources>